{
  "name": "@callstack/polygen-root",
  "private": true,
  "version": "0.1.0",
  "description": "React Native Module for running WebAssembly modules without interpretng.",
  "homepage": "https://github.com/callstackincubator/polygen#readme",
  "author": "Callstack (https://github.com/callstackincubator)",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "clean": "turbo run clean && rm -rf node_modules",
    "build": "turbo run build",
    "build:ios": "turbo run build:ios",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "publish-packages": "turbo run build && biome check . && changeset version && changeset publish",
    "postinstall": "cp -R ./packages/polygen ../ && cp -R ./packages/codegen ../ && cd .. && rm -rf polygen-root"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "wasm",
    "webassembly"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^5.0.0",
    "commitlint": "^17.0.2",
    "release-it": "^15.0.0",
    "turbo": "^2.3.3",
    "typescript": "^5.2.2",
    "vitest": "^2.1.8"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.5.3",
  "dependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12"
  }
}
